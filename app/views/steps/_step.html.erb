<div>
  <%= div_for(step) do %>
    <p>

      Step: <%= step.description %>
      <%= link_to "(remove)", step, method: :delete, confirm: "Really? Remove this Step?", remote: true %><br>
      <%= link_to "(edit)", [:edit, step], remote: true %><br>
      <% if step.status == "current" %>
        Target Day: <%= time_tag(step.target_date) %><br>

        <%= form_for step, builder: CheckToComplete, remote: true do |form| %>
          Complete: <%= form.check_to_complete %>
          <%= form.hidden_submit %>
        <% end %>

      <% else %>
         Completed on: <%= time_tag(step.completed_on) %><br>
      <% end %>

    </p>
  <% end %>
</div>
