<div class="current-goal">
  <%= div_for(current_step) do %>
	<div id="goal-header">
    <h3 id="goal-header-text">Checkpoint</h3>
  </div>
	  <div class="x-to-delete">
	    <%= link_to "x", current_step, method: :delete, confirm: "Really? Remove this Step?", remote: true %>
	  </div>
    <h3 id="goal-description"><%= current_step.description %></h3>
    <p>Target Day: <%= time_tag(current_step.target_date) %></p>

    <% if current_user.owns_step? current_step %>
      <%= form_for current_step, builder: CheckToComplete, remote: true do |form| %>
        Complete: <%= form.check_to_complete %>
        <%= form.hidden_submit %>
      <% end %>
    <% end %>
    <%= link_to "Edit this Step", [:edit, current_step], remote: true %>
  <% end %>
</div>
